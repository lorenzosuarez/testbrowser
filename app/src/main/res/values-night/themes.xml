<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme variant with proper Material Design structure -->
    <style name="Theme.TestBrowser" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/browser_primary_dark</item>
        <item name="colorPrimaryDark">@color/browser_primary_variant_dark</item>
        <item name="colorAccent">@color/browser_secondary_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/browser_background_dark</item>
        <item name="android:textColorPrimary">@color/browser_on_background_dark</item>
        <item name="android:textColorSecondary">@color/browser_on_surface_dark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/navigation_bar_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <!-- Window properties -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
